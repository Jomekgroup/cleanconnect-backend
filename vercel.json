{
  "version": 2,
  "functions": {
    "index.js": { 
      "runtime": "nodejs20.x" // Use a modern Node.js runtime
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js" // Route all /api/ traffic to your serverless function
    },
    {
      "src": "/",
      "dest": "index.js" // Route the root path (for /) to the function as well
    }
  ]
}